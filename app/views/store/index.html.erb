<%if notice %>
  <aside id="notice"> <%= notice %> </aside>
<%end%>
<h1> Pragmatic Catalog</h1>
<%= session_counter @counter %>
<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <%cache product do%>
        <li>
          <%= render 'store/product', product: product %>
        </li>
      <%end%>
    <% end %>
  <%end%>
</ul>